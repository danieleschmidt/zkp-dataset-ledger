{
  // Rust Language Server Configuration
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.checkOnSave.extraArgs": [
    "--all-targets",
    "--all-features"
  ],
  "rust-analyzer.cargo.features": "all",
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.imports.granularity.group": "module",
  "rust-analyzer.completion.addCallParentheses": false,
  "rust-analyzer.diagnostics.disabled": [
    "unresolved-proc-macro"
  ],
  "rust-analyzer.lens.enable": true,
  "rust-analyzer.lens.run.enable": true,
  "rust-analyzer.lens.debug.enable": true,
  "rust-analyzer.hover.actions.enable": true,
  "rust-analyzer.inlayHints.enable": true,
  "rust-analyzer.inlayHints.parameterHints.enable": true,
  "rust-analyzer.inlayHints.typeHints.enable": true,

  // Editor Configuration
  "editor.formatOnSave": true,
  "editor.formatOnType": false,
  "editor.formatOnPaste": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.rulers": [100],
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 100,

  // File Associations
  "files.associations": {
    "*.toml": "toml",
    "Cargo.lock": "toml",
    "*.rs": "rust",
    "*.md": "markdown",
    "*.yml": "yaml",
    "*.yaml": "yaml"
  },

  // Exclude unnecessary files from explorer
  "files.exclude": {
    "**/target": true,
    "**/.git": true,
    "**/node_modules": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/*.pyc": true,
    "**/__pycache__": true
  },

  // Search Configuration
  "search.exclude": {
    "**/target": true,
    "**/node_modules": true,
    "**/.git": true,
    "**/coverage": true,
    "**/dist": true
  },

  // Terminal Configuration
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.env.linux": {
    "RUST_BACKTRACE": "1",
    "RUST_LOG": "debug",
    "ZKP_ENV": "development"
  },

  // Language Specific Settings
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml",
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[json]": {
    "editor.defaultFormatter": "ms-vscode.vscode-json",
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },

  // Python Configuration (for bindings development)
  "python.defaultInterpreter": "/usr/bin/python3",
  "python.formatting.provider": "black",
  "python.linting.enabled": true,
  "python.linting.ruffEnabled": true,
  "python.testing.pytestEnabled": true,

  // Git Configuration
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "sync",

  // Debug Configuration
  "debug.console.fontSize": 12,
  "debug.inlineValues": true,

  // Testing Configuration
  "rust-analyzer.runnables.command": "cargo",

  // Extension Configuration
  "crates.listPreReleases": false,
  "crates.useLocalCargoIndex": true,
  "even-better-toml.formatter.allowedBlankLines": 1,

  // Workspace Trust
  "security.workspace.trust.untrustedFiles": "open",

  // Performance Settings
  "files.watcherExclude": {
    "**/target/**": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true
  },

  // UI Configuration
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // Integrated Terminal
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.copyOnSelection": true,

  // IntelliSense Configuration
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.parameterHints.enabled": true,
  "editor.suggestOnTriggerCharacters": true,

  // Code Lens
  "diffEditor.codeLens": true,

  // Breadcrumbs
  "breadcrumbs.enabled": true,
  "breadcrumbs.showKeys": true,
  "breadcrumbs.showFunctions": true,
  "breadcrumbs.showVariables": true,

  // Mini Map
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 100,

  // Problems Panel
  "problems.showCurrentInStatus": true,

  // ZKP Dataset Ledger Specific Settings
  "rust-analyzer.cargo.extraEnv": {
    "ZKP_ENV": "development",
    "RUST_LOG": "zkp_dataset_ledger=debug"
  },

  // Custom Tasks Integration
  "task.allowAutomaticTasks": "on"
}